            }
          }
          if(radioValue=='blog'){
            window.location.href = "/blogsearch?searchFor=" + value;
          }
          if(radioValue=='inf'){
            window.location.href = "/users?searchFor=" + value;
          }
          $(".hmeSrchInpMain").val('')
        } else {
            alert("Please Enter Value of Search Box")
        }
    });
    function onOffSwitch() {
      if (container.classList.contains("switchOn")) {
        container.classList.remove("switchOn");
        container.classList += " switchOff";
        $('.offline').show()
        $('.online').hide()
        localStorage.removeItem('storetype');
      } else {
        $('.online').show()
        $('.offline').hide()
        container.classList.remove("switchOff");
        container.classList += " switchOn";
        localStorage.setItem('storetype', "online");
      }
    }
    document.querySelector("#switchContainer").addEventListener("click", onOffSwitch, false);
