script.
  $(document).ready(function() {
    var container = document.querySelector("body");
    setTimeout(function(){
      if (localStorage.getItem('storetype') && localStorage.getItem('storetype') == "online") {
          container.classList.remove("switchOff");
          container.classList += " switchOn";
          $('.online').show()
          $('.offline').hide()
      } else {
          container.classList.remove("switchOn");
          container.classList += " switchOff";
          $('.offline').show()
          $('.online').hide()
      }
    }, 500);
    $('.hmeSrchInpMain').keyup(function(event) {
      event.preventDefault();
      var radioValue = $("input[name='srchTab']:checked").val();
      var value=$(this).val();
      if (event.keyCode === 13) {
        if (value !== undefined && value !== null && value !== '') {
          if(radioValue=='store' || radioValue=='website'){
            if ($('body').hasClass('switchOn')) {
                var online = true;
            } else {
                var online = false;
            }
            if (online == true) {
                window.location.href = "/search?searchFor=" + value + "&buisnessOnline=true";
            } else {
                window.location.href = "/search?searchFor=" + value + "&buisnessOffline=true";
            }
          }
          if(radioValue=='blog'){
            window.location.href = "/blogsearch?searchFor=" + value;
          }
          if(radioValue=='inf'){
            window.location.href = "/users?searchFor=" + value;
          }
          $(".hmeSrchInpMain").val('');
        } else {
            alert("Please Enter Value of Search Box")
        }
      }
    });
    $('.hmeSrchSub').click(function(event) {
      event.preventDefault();
      var radioValue = $("input[name='srchTab']:checked").val();
      var value= $("input[name='searchome']").val();
        if (value !== undefined && value !== null && value !== '') {
