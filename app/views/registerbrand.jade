script(src='https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyB6kIwhuE2hJl6LCbSKw7Kas8qa82BcKjc&libraries=places')
script.
  function initialize() {
    var input = document.getElementById('searchTextField');
    document.getElementById("searchTextField").setAttribute("placeholder", "E.g Mumbai");
    new google.maps.places.Autocomplete(input);
  }
  google.maps.event.addDomListener(window, 'load', initialize);
  var colSwiper = new Swiper('.regBrandSlideWrp .swiper-container', {
    slidesPerView: 3,
    loop: true,
    spaceBetween: 40,
    slidesPerGroup: 1,
    navigation: {
    nextEl: '.regBrandSlideWrp .swiper-button-next',
    prevEl: '.regBrandSlideWrp .swiper-button-prev',
    },
    breakpoints: {
    480: {
    slidesPerView: 1,
    spaceBetween: 0
    },
    768: {
    slidesPerView: 2,
    spaceBetween: 20
    },
    1000: {
    spaceBetween: 20
    },
    1250: {
    spaceBetween: 30
    }
    }
  });
  $('.frmSubBtn').click(function(e){
    var nameReg = /^[A-Za-z]+$/;
    var numberReg =  /^[0-9]+$/;
    var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;

    var names = $('#nameIn').val();
    var city = $('#searchTextField').val();
    var email = $('#emailIn').val();
    var telephone = $('#phoneIn').val();

    var inputVal = new Array(names, city, email, telephone);

    if(names== ""){
        alert('Please enter your name');
        return false;
    }  else if(email == ""){
        alert('Please enter your email');
        return false;
    } else if(!emailReg.test(email)){
        alert(' Please enter a valid email address');
        return false;
    } else if(city == ""){
        alert('Please enter your city');
        return false;
    }  else if(telephone == ""){
        alert(' Please enter your phone');
        return false;
    }     
    if(telephone.length < 10){
        alert(' Please enter valid phone');
        return false;
    }
    if(!numberReg.test(telephone)){
        alert('Please enter Numbers only in phone');
        return false;
    } 
    var obj={};
    obj.name = names;
    obj.email = city;
    obj.city = email;
    obj.phone = telephone;
    obj.contactfor = "Store Registration";

    var request = $.ajax({
      headers: {
          'Authorization': "maximumvsminimumsecurity",
          'Content-Type': "application/json;charset=UTF-8"
      },
      type: "POST",
      url: "https://api.zeepzoop.com/feedbacks/createcontact",
      data: JSON.stringify(obj),
      dataType: "json"
    });
    request.done(function(response) {
    localStorage.setItem("thankyou",'/register-your-brand')
        window.location.href ='/thank-you'
        //- alert("Your detail's is submitted")
    }); 
    request.fail(function(jqXHR, textStatus) {
        alert("Request failed: " + textStatus);
    });
    $("#nameIn").val('');
    $("#searchTextField").val('');
    $("#emailIn").val('');
    $("#phoneIn").val('');
    $("#descIn").val(''); 
  })
