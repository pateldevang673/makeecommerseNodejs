                .blgLstFtrWrp
                  .blgLstAuthInfWrap
                    if DecoreStory[x].userId && DecoreStory[x].userId.userImage
                      img.blgLstAuthImg(src=global.config.variable.apiPath+'/#{DecoreStory[x].userId.userImage}', alt='img')
                    else
                      img.blgLstAuthImg(src="/images/user_profile.png", alt='img')
                    .blgLstAuthInf
                      div #{DecoreStory[x].userId.name}
                      div #{DecoreStory[x].time}
      .swiper-button-prev
      .swiper-button-next

include common/footer

script.
    $('.blogCarouselWrap').each(function() {
    var $swipCont = $(this),
    $swipNxt = $swipCont.parent().children('.swiper-button-next'),
    $swipPrv = $swipCont.parent().children('.swiper-button-prev');
    var swip = new Swiper($swipCont, {
    slidesPerView: 3,
    loop: true,
    spaceBetween: 30,
    slidesPerGroup: 1,
    navigation: {
    nextEl: $swipNxt,
    prevEl: $swipPrv
    },
    breakpoints: {
    600: {
    slidesPerView: 1,
    spaceBetween: 0
    },
    768: {
    slidesPerView: 2,
    spaceBetween: 10
    },
    1000: {
    slidesPerView: 2,
    spaceBetween: 15
    },
    1250: {
    spaceBetween: 30
    }
    }
    });
    })