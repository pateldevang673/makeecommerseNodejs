include common/head

.bnrMainCont.bnrBgOlay
  .bnrBg(style="background-image: url('/images/banner-blog.jpg');")
section.secPad.bg-gry.blgListMainCont
  .centerAlign.posRel
    h1.secTtle Fashion Stories
    .swip-ctrlWrp
      .swiper-container.blogCarouselWrap
        .swiper-wrapper
          - for(var x=0;x<FashionStorylength;x++)
            .swiper-slide
              a.sclHov.blgLstImg(href='/story'+'/#{FashionStory[x]._id}')
                img(src=global.config.variable.apiPath+'/#{FashionStory[x].bannerImage}', alt='img')
              .blgLstInfWrp
                a.blgLstTtle.hmstry(href='/story'+'/#{FashionStory[x]._id}') #{FashionStory[x].title}
                .blgLstFtrWrp
                  .blgLstAuthInfWrap
                    if FashionStory[x].userId && FashionStory[x].userId.userImage
                      img.blgLstAuthImg(src=global.config.variable.apiPath+'/#{FashionStory[x].userId.userImage}', alt='img')
                    else
                      img.blgLstAuthImg(src="/images/user_profile.png", alt='img')
                    .blgLstAuthInf
                      div #{FashionStory[x].userId.name}
                      div #{FashionStory[x].time}
      .swiper-button-prev
      .swiper-button-next
section.secPad.blgListMainCont
  .centerAlign.posRel
    h1.secTtle Decore Stories
    .swip-ctrlWrp
      .swiper-container.blogCarouselWrap
