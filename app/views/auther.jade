include common/head

.wrapper
  .mid-scn-main
    section.auther-info-scn
      .fix-wrap
        .auther-user-pic
          if authorBlogs[0].authorImage
            img(src=global.config.variable.apiPath+'/#{authorBlogs[0].authorImage}', alt='')
        .auther-user-cont
          h3 #{authorBlogs[0].authorName}
          p
            | #{authorBlogs[0].autherInfo}
    section.blog-post-scn.author-mid-scn
      .fix-wrap
        .blog-post-cont
          .mostv-txt-img
            h3
              | Most Viewed 
              img(src='/images/auther-drop-icon.png',style="width: 15px;", alt='')
          .author-main-info
            a(href='http://www.zeepzoop.com/blogs'+'/#{authorBlogs[0].URL}')
              img(src=global.config.variable.apiPath+'/#{authorBlogs[0].blogPicture}', alt='')
              h3 #{authorBlogs[0].title}
              p
                | #{authorBlogs[0].metaDescription}
          ul.author-list-main
            - for (var x = 1; x < authorBlogslength ; x++)
              li
                a(href='http://www.zeepzoop.com/blogs'+'/#{authorBlogs[x].URL}')
                  .author-list-img
                    img(src=global.config.variable.apiPath+'/#{authorBlogs[x].blogPicture}', alt='')
                  .author-list-cont
                    h3 #{authorBlogs[x].title}
                    p
                      | #{authorBlogs[x].metaDescription}
        .blog-post-rcmnd
          h4 Recommended
          .blogslide-item
            a(href='http://www.zeepzoop.com/blogs'+'/#{recommendedBlogs[0].URL}')
              img(src=global.config.variable.apiPath+'/#{recommendedBlogs[0].blogPicture}', alt='')
            .blogslide-cont
              h3
                a(href='http://www.zeepzoop.com/blogs'+'/#{recommendedBlogs[0].URL}') #{recommendedBlogs[0].title}
              p
                | #{recommendedBlogs[0].metaDescription}
              .blog-user-share
                .pull-left
                  span.blog-usepic
                    img(src=global.config.variable.apiPath+'/#{recommendedBlogs[0].authorImage}', alt='')
                  .blog-name-date
                    | #{recommendedBlogs[0].authorName}
                    br
                    | #{recommendedBlogs[0].time}
          .blogslide-item
            a(href='http://www.zeepzoop.com/blogs'+'/#{recommendedBlogs[1].URL}')
              img(src=global.config.variable.apiPath+'/#{recommendedBlogs[1].blogPicture}', alt='')
            .blogslide-cont
              h3
                a(href='http://www.zeepzoop.com/blogs'+'/#{recommendedBlogs[1].URL}') #{recommendedBlogs[1].title}
              p
                | #{recommendedBlogs[1].metaDescription}
              .blog-user-share
                .pull-left
                  span.blog-usepic
                    img(src=global.config.variable.apiPath+'/#{recommendedBlogs[1].authorImage}', alt='')
                  .blog-name-date
                    | #{recommendedBlogs[1].authorName}
                    br
                    |  #{recommendedBlogs[1].time}
          .blogslide-item
            a(href='http://www.zeepzoop.com/blogs'+'/#{recommendedBlogs[2].URL}')
              img(src=global.config.variable.apiPath+'/#{recommendedBlogs[2].blogPicture}', alt='')
