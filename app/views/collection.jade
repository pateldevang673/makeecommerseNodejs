include common/footer
script.
  document.body.classList.add("body-innerpage");
script.
  $(document).ready(function() {
    $(".like_icon").click(function() {
       $(this).toggleClass("blue_like");
    });
    $(".bookmarkicon").click(function() {
      $(this).toggleClass("black_bookmarkicon");
    });
  });
